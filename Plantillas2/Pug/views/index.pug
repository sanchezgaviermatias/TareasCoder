html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6' crossorigin='anonymous')
    title API Restful
  body 
    .container
      h2 Formulario Agregar Producto
      form(method='post' action='api/productos/guardar/')
        label.form-label T&iacute;tutlo
        input.form-control(type='text' required='' name='title')
        br
        label.form-label Precio
        input.form-control(type='number' required='' name='price')
        br
        label.form-label Url Im&aacute;gen
        input.form-control(type='text' required='' name='thumbnail')
        br
        button.btn.btn-primary.mx-3(type='submit' ) Agregar Producto &#x1F60E;
        button.btn.btn-danger
          a(style='color:inherit; text-decoration:none;' href='http://localhost:8080/productos/vista') Mirar Productos 